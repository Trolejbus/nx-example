    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/cars-domain": ["libs/cars/cars-domain/src/index.ts"],
      "@org/cars-form-feature": ["libs/cars/cars-form-feature/src/index.ts"],
      "@org/cars-list-feature": ["libs/cars/cars-list-feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
